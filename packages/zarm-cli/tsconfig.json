// 这意味着你要编译的所有 TypeScript 源文件都在 src 目录中，编译产物会输出到 dist 目录。
{
  "include": ["src"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
